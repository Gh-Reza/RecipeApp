<section class="recipe section">
  <h2 class="title">Public Recipes</h2>
  <ul>
    <% @public_recipes.each do |recipe| %>
      <li class="recipe-item">
        <div>
          <%=link_to recipe.name, recipe_path(recipe.id), class: 'name' %>
          <p><%= recipe.user.name %></p>
        </div>
        <div>
          <p>Total items: <%= recipe.foods.count %></p>
          <p>Total price: <%= recipe.total_foods_price %></p>
        </div>
      </li>
    <% end %>
  </ul>
</section>